@page "/settings"
@using UfoGame.Infra
@inject GameState GameState
@inject NavigationManager Navigation

<PageTitle>Settings</PageTitle>

<h1>Settings</h1>

<div class="container text-center" style="max-width: 500px">
    <div class="row">
        <div class="col btn btn-danger" data-bs-toggle="modal" data-bs-target="#resetGameModal">
            RESET game
        </div>
    </div>
</div>

<div class="modal fade" id="resetGameModal" tabindex="-1" aria-labelledby="resetGameModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="resetGameModalLabel">RESET game</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                The game will be reset and you will LOSE ALL PROGRESS. Are you sure?
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick="OnClickReset">Yes, RESET</button>
            </div>
        </div>
    </div>
</div>

@code
{
    private void OnClickReset()
    {
        GameState.Reset();
        Navigation.NavigateTo("/");
    }
}
