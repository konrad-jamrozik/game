@using UfoGame.Cards.Components
@using UfoGame.Model
@using UfoGame.Model.Data
@inject ArchiveData ArchiveData
@inject Agents Agents

<Card Title="Operations stats">
    <CardDataRow Label="Missions launched" Value="@ArchiveData.MissionsLaunched" />
    <CardDataRow Label="Successful missions" Value="@ArchiveData.SuccessfulMissions" />
    <CardDataRow Label="Failed missions" Value="@ArchiveData.FailedMissions" />
    <CardDataRow Label="Ignored missions" Value="@ArchiveData.IgnoredMissions" />
    <CardDataRow Label="Agents hired" Value="@Agents.HiredCount" />
    <CardDataRow Label="Agents sacked" Value="@Agents.SackedCount" />
    <CardDataRow Label="Agents lost" Value="@Agents.LostCount" />
</Card>
