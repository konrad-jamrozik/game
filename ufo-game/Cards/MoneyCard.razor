@using UfoGame.Cards.Components
@using UfoGame.Model
@inject Accounting Accounting
@inject ViewModel.HireAgentsPlayerAction HireAgents


<Card Title="Money">
    <CardDataRow Label="Balance" Value="Accounting.CurrentMoney" />
    <CardDataRow Label="Income per turn" 
                 Value="Accounting.MoneyPerTurnAmount" 
                 ValueCssClass="@(Accounting.MoneyPerTurnAmount >= 0 ? "text-success" : "text-danger")" />
    <CardDataRow Label="Passive income" Value="Accounting.PassiveIncome" ValueCssClass="text-success" />
    <CardDataRow Label="Expenses" Value="Accounting.Expenses" ValueCssClass="text-danger" />
</Card>