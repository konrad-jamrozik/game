@using UfoGame.Model;

<div class="row align-items-center @CssClass">
    <div class="col-6 text-start">@Label</div>
    <div class="col @ValueCssClass">@DisplayedValue()</div>
</div>

@code
{
    [Parameter]
    public string Label { get; set; } = "";

    [Parameter]
    public object Value { get; set; } = "";

    [Parameter]
    public bool Enabled { get; set; } = true;

    [Parameter]
    public string CssClass { get; set; } = "";

    [Parameter]
    public string ValueCssClass { get; set; } = "";

    private string DisplayedValue()
    {
        return Enabled ? Value.ToString() ?? string.Empty : "-";
    }
}